<%= form_for :article, url: articles_path do |f| %>

<%= f.select :category, options_for_select([["Test", "test"], ["Urgent", "urgent"], ["Announcement", "announcement"]]) %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  
<% end %>

<%= link_to 'Back', articles_path %>