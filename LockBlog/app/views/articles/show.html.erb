<script type="text/javascript">
			function showReply(comid) {
			document.getElementById(comid).style.display = "inline";
			return true;
			}
		</script>
<p>
  <strong>Blog Title:</strong>
  <%= @article.title %>
</p>
 

<!-- <%= image_tag @article.image_url.to_s %> -->
<!-- <%= @article.image_url.to_s %> -->

<p>
  <strong>Body:</strong>
  <%= auto_html(@article.text) { simple_format; image; youtube(:width => 400, :height => 250, :autoplay => false) } %>
  <br>

</p>

<p>
  <%= social_share_button_tag("") %>
  <br>
</p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
 
  <p>
	<strong>Comment:</strong>

    <%= comment.body %>
  </p>
  
  <p>
  <% imgs = comment.url.split("\n") %>
  <% if !imgs.nil? %>
  <% imgs.each do |image| %>
  <p>
  	<%if(image.include? "youtube.com")%>
	<iframe width="640" height="390" src=<%= image.sub! 'watch?v=', 'embed/'%> frameborder="0" allowfullscreen></iframe>
  	<%# <% image.sub! 'watch?v=', 'embed/'%>
  	<% end %>
  	<% if(image.length > 0 and !image.include? "youtube.com" )%>
	<img src= <%= image %> alt="Smiley face" height="300" width="300">
  	<% end %>
   </p>
	<% end %>
   <% end %>
    <%= auto_html(comment.body) { simple_format; image; youtube(:width => 400, :height => 250, :autoplay => false) } %>
  </p>
  
  <p>

	<%= button_to('delete comment', [comment.article, comment], {:onclick => "return confirm('Are you sure?')", :method => :delete}) %>
  </p>
    <% if !comment.nil? %>
     <% comment.replies.each do |reply| %>
 
        <p>
			<strong>reply:</strong>
			<%= reply.body %>
			<%= auto_html(reply.body) { simple_format; image; youtube(:width => 400, :height => 250, :autoplay => false) } %>
        </p>
      <p>
          
      </p>
	  <p>
	  <%= button_to('delete reply', [reply.comment, reply], {:onclick => "return confirm('Are you sure?')", :method => :delete}) %>
      </p>
	  <% end %>
    <% end %>
		 <input onclick="showReply('reply<%= comment.id %>')" type="button" value="Add a reply"/>
		 
		 <div id="reply<%= comment.id %>" style="display: none">
        <%= form_for([comment, comment.replies.build]) do |f| %>
            <p>
				<%= f.label :body %><br>
				<%= f.text_area :body %>
            </p>
            
  
            <p>
				<%= f.submit %>
            </p>

      <% end %>
	  </div>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
	<%= f.label :commenter %><br>
	<%= f.text_field :commenter %>
  </p>
  <p>

	<%= f.label :body %><br>
	<%= f.text_area :body %>
  </p>
  <p>
	<%= f.label :Video_Picture_url %><br>
	<%= f.text_area :url %>
  </p>
  
  <p>
	<%= f.submit %>
  </p>
<% end %>

