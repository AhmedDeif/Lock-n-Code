      <% end %>
      </ul>
    </div>
  <% end %>

  <p class="fieldset">
    <%= f.label :fisrt_name, :class => "image-replace cd-username", 'for' => 'signup-username' %><br>
    <%= f.text_field :fisrt_name, :class => "has-padding has-border", 'id' => 'signup-username', 'placeholder' => 'First Name' %>
  </p>
  <p class="fieldset">
    <%= f.label :last_name, :class => "image-replace cd-username", 'for' => 'signup-username' %><br>
    <%= f.text_field :last_name, :class => "has-padding has-border", 'id' => 'signup-username', 'placeholder' => 'Last Name' %>
  </p>
  <p class="fieldset">
    <%= f.label :email, :class => "image-replace cd-email", 'for' => 'signup-email' %><br>
    <%= f.text_field :email, :class => "has-padding has-border", 'id' => 'signup-email', 'placeholder' => 'E-mail' %>
  </p>
  <p class="fieldset">
    <%= f.label :password, :class => "image-replace cd-password", 'for' => 'signup-password' %><br>
    <%= f.password_field :password, :class => "has-padding has-border", 'id' => 'signup-password', 'placeholder' => 'Password' %>
  </p>
  <p class="fieldset">
    <%= f.label :signature, :class => "image-replace", 'for' => 'signup-password' %><br>
    <%= f.text_area :signature, :class => "has-padding has-border", 'id' => 'signup-password', 'placeholder' => 'Signature' %>
  </p>
  <%= f.file_field :profilePicture %>
  <div class="actions">
    <br>
    <%= f.submit :class => "submit-button" %>
</div>
