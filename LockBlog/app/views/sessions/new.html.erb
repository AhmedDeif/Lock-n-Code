<h1>Log in</h1>
<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p>
		<%= label_tag :password %><br />
		<%= text_field_tag :password %>

	</p>
	<p class="button"><%= submit_tag %></p>
	<% end %>

	<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<%= yield%>



